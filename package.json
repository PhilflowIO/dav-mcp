{
  "name": "tsdav-mcp-server",
  "version": "2.4.0",
  "description": "Model Context Protocol (MCP) server for CalDAV/CardDAV/VTODO integration via tsdav - enables AI systems to manage calendars, contacts, and tasks",
  "type": "module",
  "main": "src/index.js",
  "bin": {
    "tsdav-mcp": "./src/server-stdio.js"
  },
  "scripts": {
    "start": "node src/index.js",
    "start:stdio": "node src/server-stdio.js",
    "dev": "node --watch src/index.js",
    "test": "NODE_ENV=test NODE_OPTIONS='--experimental-vm-modules' jest",
    "test:watch": "NODE_ENV=test NODE_OPTIONS='--experimental-vm-modules' jest --watch",
    "test:coverage": "NODE_ENV=test NODE_OPTIONS='--experimental-vm-modules' jest --coverage",
    "test:integration": "node tests/integration/mcp-test-runner.js",
    "test:setup-data": "node tests/integration/setup-test-data.js"
  },
  "author": "tsdav-mcp-server contributors",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/PhilflowIO/tsdav-mcp-server.git"
  },
  "bugs": {
    "url": "https://github.com/PhilflowIO/tsdav-mcp-server/issues"
  },
  "homepage": "https://github.com/PhilflowIO/tsdav-mcp-server#readme",
  "keywords": [
    "mcp",
    "model-context-protocol",
    "caldav",
    "carddav",
    "calendar",
    "contacts",
    "tsdav",
    "n8n",
    "ai",
    "llm",
    "dav",
    "webdav",
    "radicale",
    "nextcloud"
  ],
  "engines": {
    "node": ">=18.0.0"
  },
  "files": [
    "src/**/*",
    "README.md",
    "LICENSE",
    "CHANGELOG.md"
  ],
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.18.2",
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "express-rate-limit": "^8.1.0",
    "ical.js": "^2.1.0",
    "tsdav": "github:PhilflowIO/tsdav#master",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/jest": "^30.0.0",
    "jest": "^30.2.0"
  }
}
